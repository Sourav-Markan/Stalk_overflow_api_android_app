<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/checkbox_on_background"
            android:id="@+id/item_isacceptedanswer"/>

        <com.mukesh.MarkdownView
            android:id="@+id/item_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/item_isacceptedanswer"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_body"
            android:baselineAligned="false"
            android:padding="8dp">

            <ImageView
                android:id="@+id/item_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_toRightOf="@+id/item_views"
                android:layout_toLeftOf="@+id/item_owner"
                android:scaleType="center"
                android:src="@drawable/questionownerpic"/>

            <TextView
                android:id="@+id/item_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="name \n reputation"
                android:textSize="15sp"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>